generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////////////////
// AUTH & RBAC
/////////////////////

model User {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  email        String   @unique
  phone        String?
  passwordHash String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())

  governmentId String? @db.Uuid
  policeId     String? @db.Uuid
  ngoId        String? @db.Uuid
  hospitalId   String? @db.Uuid

  government Government? @relation(fields: [governmentId], references: [id])
  police     Police?     @relation(fields: [policeId], references: [id])
  ngo        NGO?        @relation(fields: [ngoId], references: [id])
  hospital   Hospital?   @relation(fields: [hospitalId], references: [id])

  roles            UserRole[]
  auditLogs        AuditLog[]
  createdResources Resource[]
  createdShelters  Shelter[]
  createdReports   MedicalReport[]

  @@map("user")
}

model Role {
  id   String @id @default(uuid()) @db.Uuid
  name String @unique

  users UserRole[]

  @@map("role")
}

model UserRole {
  userId String @db.Uuid
  roleId String @db.Uuid

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_role")
}

/////////////////////
// GOVERNMENT
/////////////////////

model Government {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  level        String   // CENTRAL | STATE | DISTRICT
  state        String?
  district     String?
  department   String
  contactEmail String
  contactPhone String
  createdAt    DateTime @default(now())

  users User[]

  @@map("government")
}

/////////////////////
// POLICE
/////////////////////

model Police {
  id              String   @id @default(uuid()) @db.Uuid
  name            String
  stationCode     String   @unique
  state           String
  district        String
  address         String
  officerInCharge String
  contactNumber   String
  createdAt       DateTime @default(now())

  users User[]

  @@map("police")
}

/////////////////////
// NGO
/////////////////////

model NGO {
  id                 String   @id @default(uuid()) @db.Uuid
  name               String
  registrationNumber String   @unique
  state              String
  district           String
  focusArea          String
  contactEmail       String
  contactPhone       String
  createdAt          DateTime @default(now())

  users User[]

  @@map("ngo")
}

/////////////////////
// HOSPITAL
/////////////////////

model Hospital {
  id            String   @id @default(uuid()) @db.Uuid
  name          String
  type          String   // GOVT | PRIVATE
  state         String
  district      String
  address       String
  totalBeds     Int
  availableBeds Int
  emergencyBeds Int
  contactNumber String
  createdAt     DateTime @default(now())

  users   User[]
  reports MedicalReport[]

  @@map("hospital")
}

/////////////////////
// DISASTER
/////////////////////

model Disaster {
  id         String   @id @default(uuid()) @db.Uuid
  name       String
  type       String
  severity   Int
  location   String
  status     String
  reportedAt DateTime @default(now())

  victims     Victim[]
  assignments RescueAssignment[]
  resources   ResourceAllocation[]
  metrics     DisasterMetric?

  @@map("disaster")
}

model Victim {
  id         String   @id @default(uuid()) @db.Uuid
  disasterId String   @db.Uuid
  name       String?
  age        Int?
  gender     String?
  condition  String?
  rescued    Boolean  @default(false)
  createdAt  DateTime @default(now())

  disaster Disaster @relation(fields: [disasterId], references: [id], onDelete: Cascade)
  reports  MedicalReport[]

  @@map("victim")
}

/////////////////////
// RESCUE
/////////////////////

model RescueTeam {
  id           String @id @default(uuid()) @db.Uuid
  name         String
  organization String
  contactPhone String
  status       String

  assignments RescueAssignment[]

  @@map("rescue_team")
}

model RescueAssignment {
  id           String   @id @default(uuid()) @db.Uuid
  rescueTeamId String   @db.Uuid
  disasterId   String   @db.Uuid
  assignedAt   DateTime @default(now())

  rescueTeam RescueTeam @relation(fields: [rescueTeamId], references: [id])
  disaster   Disaster   @relation(fields: [disasterId], references: [id])

  @@map("rescue_assignment")
}

/////////////////////
// SHELTER
/////////////////////

model Shelter {
  id                String   @id @default(uuid()) @db.Uuid
  name              String
  location          String
  capacity          Int
  availableCapacity Int
  createdAt         DateTime @default(now())

  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])

  @@map("shelter")
}

/////////////////////
// RESOURCES
/////////////////////

model Resource {
  id       String @id @default(uuid()) @db.Uuid
  type     String
  quantity Int
  unit     String

  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])

  allocations ResourceAllocation[]

  @@map("resource")
}

model ResourceAllocation {
  id                String   @id @default(uuid()) @db.Uuid
  resourceId        String   @db.Uuid
  disasterId        String   @db.Uuid
  allocatedQuantity Int
  allocatedAt       DateTime @default(now())

  resource Resource @relation(fields: [resourceId], references: [id])
  disaster Disaster @relation(fields: [disasterId], references: [id])

  @@map("resource_allocation")
}

/////////////////////
// MEDICAL
/////////////////////

model MedicalReport {
  id         String   @id @default(uuid()) @db.Uuid
  hospitalId String   @db.Uuid
  victimId   String   @db.Uuid
  report     String
  reportedAt DateTime @default(now())

  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])

  hospital Hospital @relation(fields: [hospitalId], references: [id])
  victim   Victim   @relation(fields: [victimId], references: [id])

  @@map("medical_report")
}

/////////////////////
// AGGREGATION
/////////////////////

model DisasterMetric {
  disasterId     String   @id @db.Uuid
  totalVictims   Int
  rescuedVictims Int
  activeShelters Int
  lastUpdated    DateTime @default(now())

  disaster Disaster @relation(fields: [disasterId], references: [id], onDelete: Cascade)

  @@map("disaster_metric")
}

/////////////////////
// AUDIT
/////////////////////

model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String?  @db.Uuid
  action    String
  entity    String
  entityId  String
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_log")
}
