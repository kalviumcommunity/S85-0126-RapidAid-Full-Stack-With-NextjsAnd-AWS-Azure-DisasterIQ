generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String          @id @default(uuid()) @db.Uuid
  name             String
  email            String          @unique
  phone            String?
  passwordHash     String
  isActive         Boolean         @default(true)
  createdAt        DateTime        @default(now())
  governmentId     String?         @db.Uuid
  policeId         String?         @db.Uuid
  ngoId            String?         @db.Uuid
  hospitalId       String?         @db.Uuid
  auditLogs        AuditLog[]
  createdReports   MedicalReport[]
  createdResources Resource[]
  createdShelters  Shelter[]
  government       Government?     @relation(fields: [governmentId], references: [id])
  hospital         Hospital?       @relation(fields: [hospitalId], references: [id])
  ngo              NGO?            @relation(fields: [ngoId], references: [id])
  police           Police?         @relation(fields: [policeId], references: [id])
  roles            UserRole[]

  @@map("user")
}

model Role {
  id    String     @id @default(uuid()) @db.Uuid
  name  String     @unique
  users UserRole[]

  @@map("role")
}

model UserRole {
  userId String @db.Uuid
  roleId String @db.Uuid
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_role")
}

model Government {
  id           String     @id @default(uuid()) @db.Uuid
  name         String
  level        String
  state        String?
  district     String?
  department   String
  contactEmail String     @unique
  contactPhone String
  createdAt    DateTime   @default(now())
  disasters    Disaster[]
  media        Media[]
  users        User[]

  @@map("government")
}

model Police {
  id              String   @id @default(uuid()) @db.Uuid
  name            String
  stationCode     String   @unique
  state           String
  district        String
  address         String
  officerInCharge String
  contactNumber   String
  createdAt       DateTime @default(now())
  users           User[]

  @@map("police")
}

model NGO {
  id                 String   @id @default(uuid()) @db.Uuid
  name               String
  registrationNumber String   @unique
  state              String
  district           String
  focusArea          String
  contactEmail       String
  contactPhone       String
  createdAt          DateTime @default(now())
  users              User[]

  @@map("ngo")
}

model Hospital {
  id            String          @id @default(uuid()) @db.Uuid
  name          String
  type          String
  state         String
  district      String
  address       String
  totalBeds     Int
  availableBeds Int
  emergencyBeds Int
  contactNumber String
  createdAt     DateTime        @default(now())
  reports       MedicalReport[]
  users         User[]

  @@map("hospital")
}

model Disaster {
  id           String               @id @default(uuid()) @db.Uuid
  name         String
  type         String
  severity     Int
  location     String
  status       String
  reportedAt   DateTime             @default(now())
  governmentId String               @db.Uuid
  government   Government           @relation(fields: [governmentId], references: [id])
  metrics      DisasterMetric?
  media        Media[]
  assignments  RescueAssignment[]
  resources    ResourceAllocation[]
  victims      Victim[]

  @@map("disaster")
}

model Media {
  id                     String     @id @default(uuid()) @db.Uuid
  type                   MediaType
  url                    String
  thumbnail              String?
  disasterId             String     @db.Uuid
  uploadedByGovernmentId String     @db.Uuid
  createdAt              DateTime   @default(now())
  disaster               Disaster   @relation(fields: [disasterId], references: [id], onDelete: Cascade)
  uploadedByGovernment   Government @relation(fields: [uploadedByGovernmentId], references: [id])

  @@map("media")
}

model Victim {
  id         String          @id @default(uuid()) @db.Uuid
  disasterId String          @db.Uuid
  name       String?
  age        Int?
  gender     String?
  condition  String?
  rescued    Boolean         @default(false)
  createdAt  DateTime        @default(now())
  reports    MedicalReport[]
  disaster   Disaster        @relation(fields: [disasterId], references: [id], onDelete: Cascade)

  @@map("victim")
}

model RescueTeam {
  id           String             @id @default(uuid()) @db.Uuid
  name         String
  organization String
  contactPhone String
  status       String
  assignments  RescueAssignment[]

  @@map("rescue_team")
}

model RescueAssignment {
  id           String     @id @default(uuid()) @db.Uuid
  rescueTeamId String     @db.Uuid
  disasterId   String     @db.Uuid
  assignedAt   DateTime   @default(now())
  disaster     Disaster   @relation(fields: [disasterId], references: [id])
  rescueTeam   RescueTeam @relation(fields: [rescueTeamId], references: [id])

  @@map("rescue_assignment")
}

model Shelter {
  id                String   @id @default(uuid()) @db.Uuid
  name              String
  location          String
  capacity          Int
  availableCapacity Int
  createdAt         DateTime @default(now())
  createdById       String   @db.Uuid
  createdBy         User     @relation(fields: [createdById], references: [id])

  @@map("shelter")
}

model Resource {
  id          String               @id @default(uuid()) @db.Uuid
  type        String
  quantity    Int
  unit        String
  createdById String               @db.Uuid
  createdBy   User                 @relation(fields: [createdById], references: [id])
  allocations ResourceAllocation[]

  @@map("resource")
}

model ResourceAllocation {
  id                String   @id @default(uuid()) @db.Uuid
  resourceId        String   @db.Uuid
  disasterId        String   @db.Uuid
  allocatedQuantity Int
  allocatedAt       DateTime @default(now())
  disaster          Disaster @relation(fields: [disasterId], references: [id])
  resource          Resource @relation(fields: [resourceId], references: [id])

  @@map("resource_allocation")
}

model MedicalReport {
  id          String   @id @default(uuid()) @db.Uuid
  hospitalId  String   @db.Uuid
  victimId    String   @db.Uuid
  report      String
  reportedAt  DateTime @default(now())
  createdById String   @db.Uuid
  createdBy   User     @relation(fields: [createdById], references: [id])
  hospital    Hospital @relation(fields: [hospitalId], references: [id])
  victim      Victim   @relation(fields: [victimId], references: [id])

  @@map("medical_report")
}

model DisasterMetric {
  disasterId     String   @id @db.Uuid
  totalVictims   Int
  rescuedVictims Int
  activeShelters Int
  lastUpdated    DateTime @default(now())
  disaster       Disaster @relation(fields: [disasterId], references: [id], onDelete: Cascade)

  @@map("disaster_metric")
}

model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String?  @db.Uuid
  action    String
  entity    String
  entityId  String
  timestamp DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@map("audit_log")
}

enum MediaType {
  IMAGE
  VIDEO
}
