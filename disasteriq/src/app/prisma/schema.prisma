generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////////////////
// ORGANIZATION
/////////////////////

model Organization {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  type      String   // NGO, HOSPITAL, GOVT
  createdAt DateTime @default(now())

  users     User[]
}

/////////////////////
// AUTH & RBAC
/////////////////////

model User {
  id              String   @id @default(uuid()) @db.Uuid
  name            String
  email           String   @unique
  phone           String?
  passwordHash    String
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())

  // FIXED HERE âœ…
  organizationId  String?  @db.Uuid
  organization    Organization? @relation(fields: [organizationId], references: [id])

  roles            UserRole[]
  auditLogs        AuditLog[]
  createdResources Resource[]
  createdShelters  Shelter[]
  createdReports   MedicalReport[]
}

model Role {
  id    String @id @default(uuid()) @db.Uuid
  name  String @unique

  users UserRole[]
}

model UserRole {
  userId String @db.Uuid
  roleId String @db.Uuid

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

/////////////////////
// DISASTER
/////////////////////

model Disaster {
  id         String   @id @default(uuid()) @db.Uuid
  name       String
  type       String
  severity   Int
  location   String
  status     String
  reportedAt DateTime @default(now())

  victims      Victim[]
  assignments  RescueAssignment[]
  resources    ResourceAllocation[]
  metrics      DisasterMetric?

  @@index([status])
}

model Victim {
  id         String   @id @default(uuid()) @db.Uuid
  disasterId String   @db.Uuid
  name       String?
  age        Int?
  gender     String?
  condition  String?
  rescued    Boolean  @default(false)
  createdAt  DateTime @default(now())

  disaster   Disaster @relation(fields: [disasterId], references: [id], onDelete: Cascade)
  reports    MedicalReport[]

  @@index([disasterId])
}

/////////////////////
// RESCUE
/////////////////////

model RescueTeam {
  id           String @id @default(uuid()) @db.Uuid
  name         String
  organization String
  contactPhone String
  status       String

  assignments RescueAssignment[]
}

model RescueAssignment {
  id           String   @id @default(uuid()) @db.Uuid
  rescueTeamId String   @db.Uuid
  disasterId   String   @db.Uuid
  assignedAt   DateTime @default(now())

  rescueTeam RescueTeam @relation(fields: [rescueTeamId], references: [id])
  disaster   Disaster   @relation(fields: [disasterId], references: [id])
}

/////////////////////
// SHELTER
/////////////////////

model Shelter {
  id                String   @id @default(uuid()) @db.Uuid
  name              String
  location          String
  capacity          Int
  availableCapacity Int
  createdAt         DateTime @default(now())

  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])
}

/////////////////////
// RESOURCES
/////////////////////

model Resource {
  id          String @id @default(uuid()) @db.Uuid
  type        String
  quantity    Int
  unit        String

  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])

  allocations ResourceAllocation[]
}

model ResourceAllocation {
  id                String   @id @default(uuid()) @db.Uuid
  resourceId        String   @db.Uuid
  disasterId        String   @db.Uuid
  allocatedQuantity Int
  allocatedAt       DateTime @default(now())

  resource Resource @relation(fields: [resourceId], references: [id])
  disaster Disaster @relation(fields: [disasterId], references: [id])
}

/////////////////////
// HOSPITAL & MEDICAL
/////////////////////

model Hospital {
  id            String @id @default(uuid()) @db.Uuid
  name          String
  location      String
  contactNumber String

  reports MedicalReport[]
}

model MedicalReport {
  id         String   @id @default(uuid()) @db.Uuid
  hospitalId String   @db.Uuid
  victimId   String   @db.Uuid
  report     String
  reportedAt DateTime @default(now())

  createdById String @db.Uuid
  createdBy   User   @relation(fields: [createdById], references: [id])

  hospital Hospital @relation(fields: [hospitalId], references: [id])
  victim   Victim   @relation(fields: [victimId], references: [id])
}

/////////////////////
// FILES
/////////////////////

model ObjectFile {
  id         String   @id @default(uuid()) @db.Uuid
  entityType String
  entityId   String
  fileUrl    String
  uploadedAt DateTime @default(now())
}

/////////////////////
// AGGREGATION
/////////////////////

model DisasterMetric {
  disasterId     String   @id @db.Uuid
  totalVictims   Int
  rescuedVictims Int
  activeShelters Int
  lastUpdated    DateTime @default(now())

  disaster Disaster @relation(fields: [disasterId], references: [id], onDelete: Cascade)
}

/////////////////////
// AUDIT
/////////////////////

model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String?  @db.Uuid
  action    String
  entity    String
  entityId  String
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}
