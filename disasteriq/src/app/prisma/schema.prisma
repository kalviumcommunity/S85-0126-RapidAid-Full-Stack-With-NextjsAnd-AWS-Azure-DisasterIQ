generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  email        String   @unique
  phone        String?
  passwordHash String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  governmentId String?  @db.Uuid
  policeId     String?  @db.Uuid
  ngoId        String?  @db.Uuid
  hospitalId   String?  @db.Uuid

  auditLogs        AuditLog[]
  createdReports   MedicalReport[]
  createdResources Resource[]
  createdShelters  Shelter[]

  government Government? @relation(fields: [governmentId], references: [id])
  hospital   Hospital?   @relation(fields: [hospitalId], references: [id])
  ngo        NGO?        @relation(fields: [ngoId], references: [id])
  police     Police?     @relation(fields: [policeId], references: [id])

  roles UserRole[]

  ngoRequestsSent NGORequest[] // ✅ ADD THIS

  @@index([createdAt])
  @@index([governmentId])
  @@index([policeId])
  @@index([ngoId])
  @@index([hospitalId])
  @@map("user")
}

model Role {
  id    String     @id @default(uuid()) @db.Uuid
  name  String     @unique
  users UserRole[]

  @@map("role")
}

model UserRole {
  userId String @db.Uuid
  roleId String @db.Uuid
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([roleId])
  @@map("user_role")
}

model Government {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  level        String
  state        String?
  district     String?
  department   String
  contactEmail String   @unique
  contactPhone String
  createdAt    DateTime @default(now())

  disasters   Disaster[]
  media       Media[]
  users       User[]
  ngoRequests NGORequest[] // ✅ ADD THIS

  @@index([createdAt])
  @@map("government")
}

model Police {
  id              String   @id @default(uuid()) @db.Uuid
  name            String
  stationCode     String   @unique
  state           String
  district        String
  address         String
  officerInCharge String
  contactNumber   String
  createdAt       DateTime @default(now())
  users           User[]

  @@index([createdAt])
  @@index([state, district])
  @@map("police")
}

model NGO {
  id                 String       @id @default(uuid()) @db.Uuid
  name               String
  registrationNumber String       @unique
  state              String
  district           String
  focusArea          String
  contactEmail       String
  contactPhone       String
  createdAt          DateTime     @default(now())
  users              User[]
  requests           NGORequest[]

  @@index([createdAt])
  @@index([state, district])
  @@map("ngo")
}

model Hospital {
  id            String          @id @default(uuid()) @db.Uuid
  name          String
  type          String
  state         String
  district      String
  address       String
  totalBeds     Int
  availableBeds Int
  emergencyBeds Int
  contactNumber String
  createdAt     DateTime        @default(now())
  reports       MedicalReport[]
  users         User[]

  @@index([createdAt])
  @@index([state, district])
  @@map("hospital")
}

model Disaster {
  id           String               @id @default(uuid()) @db.Uuid
  name         String
  type         String
  severity     Int
  location     String
  status       String
  reportedAt   DateTime             @default(now())
  governmentId String               @db.Uuid
  government   Government           @relation(fields: [governmentId], references: [id])
  metrics      DisasterMetric?
  media        Media[]
  assignments  RescueAssignment[]
  resources    ResourceAllocation[]
  victims      Victim[]
  ngoRequests  NGORequest[]

  @@index([governmentId])
  @@index([status])
  @@index([reportedAt])
  @@index([governmentId, reportedAt])
  @@map("disaster")
}

model NGORequest {
  id String @id @default(uuid()) @db.Uuid

  disasterId   String @db.Uuid
  ngoId        String @db.Uuid
  governmentId String @db.Uuid

  status NGORequestStatus @default(PENDING)

  requestedById String    @db.Uuid // government user
  respondedAt   DateTime?
  createdAt     DateTime  @default(now())

  disaster    Disaster   @relation(fields: [disasterId], references: [id], onDelete: Cascade)
  ngo         NGO        @relation(fields: [ngoId], references: [id])
  government  Government @relation(fields: [governmentId], references: [id])
  requestedBy User       @relation(fields: [requestedById], references: [id])

  @@unique([disasterId, ngoId]) // one request per NGO per disaster
  @@index([status])
  @@index([createdAt])
  @@index([disasterId])
  @@index([ngoId])
  @@index([governmentId])
  @@map("ngo_request")
}

model Media {
  id                     String     @id @default(uuid()) @db.Uuid
  type                   MediaType
  url                    String
  thumbnail              String?
  disasterId             String     @db.Uuid
  uploadedByGovernmentId String     @db.Uuid
  createdAt              DateTime   @default(now())
  disaster               Disaster   @relation(fields: [disasterId], references: [id], onDelete: Cascade)
  uploadedByGovernment   Government @relation(fields: [uploadedByGovernmentId], references: [id])

  @@index([disasterId])
  @@index([uploadedByGovernmentId])
  @@index([createdAt])
  @@map("media")
}

model Victim {
  id         String          @id @default(uuid()) @db.Uuid
  disasterId String          @db.Uuid
  name       String?
  age        Int?
  gender     String?
  condition  String?
  rescued    Boolean         @default(false)
  createdAt  DateTime        @default(now())
  reports    MedicalReport[]
  disaster   Disaster        @relation(fields: [disasterId], references: [id], onDelete: Cascade)

  @@index([disasterId])
  @@index([rescued])
  @@index([createdAt])
  @@map("victim")
}

model RescueTeam {
  id           String             @id @default(uuid()) @db.Uuid
  name         String
  organization String
  contactPhone String
  status       String
  assignments  RescueAssignment[]

  @@index([status])
  @@map("rescue_team")
}

model RescueAssignment {
  id           String     @id @default(uuid()) @db.Uuid
  rescueTeamId String     @db.Uuid
  disasterId   String     @db.Uuid
  assignedAt   DateTime   @default(now())
  disaster     Disaster   @relation(fields: [disasterId], references: [id])
  rescueTeam   RescueTeam @relation(fields: [rescueTeamId], references: [id])

  @@index([disasterId])
  @@index([rescueTeamId])
  @@index([assignedAt])
  @@index([disasterId, rescueTeamId])
  @@map("rescue_assignment")
}

model Shelter {
  id                String   @id @default(uuid()) @db.Uuid
  name              String
  location          String
  capacity          Int
  availableCapacity Int
  createdAt         DateTime @default(now())
  createdById       String   @db.Uuid
  createdBy         User     @relation(fields: [createdById], references: [id])

  @@index([createdById])
  @@index([createdAt])
  @@map("shelter")
}

model Resource {
  id          String               @id @default(uuid()) @db.Uuid
  type        String
  quantity    Int
  unit        String
  createdById String               @db.Uuid
  createdBy   User                 @relation(fields: [createdById], references: [id])
  allocations ResourceAllocation[]

  @@index([createdById])
  @@index([type])
  @@map("resource")
}

model ResourceAllocation {
  id                String   @id @default(uuid()) @db.Uuid
  resourceId        String   @db.Uuid
  disasterId        String   @db.Uuid
  allocatedQuantity Int
  allocatedAt       DateTime @default(now())
  disaster          Disaster @relation(fields: [disasterId], references: [id])
  resource          Resource @relation(fields: [resourceId], references: [id])

  @@index([disasterId])
  @@index([resourceId])
  @@index([allocatedAt])
  @@index([disasterId, resourceId])
  @@map("resource_allocation")
}

model MedicalReport {
  id          String   @id @default(uuid()) @db.Uuid
  hospitalId  String   @db.Uuid
  victimId    String   @db.Uuid
  report      String
  reportedAt  DateTime @default(now())
  createdById String   @db.Uuid
  createdBy   User     @relation(fields: [createdById], references: [id])
  hospital    Hospital @relation(fields: [hospitalId], references: [id])
  victim      Victim   @relation(fields: [victimId], references: [id])

  @@index([hospitalId])
  @@index([victimId])
  @@index([createdById])
  @@index([reportedAt])
  @@map("medical_report")
}

model DisasterMetric {
  disasterId     String   @id @db.Uuid
  totalVictims   Int
  rescuedVictims Int
  activeShelters Int
  lastUpdated    DateTime @default(now())
  disaster       Disaster @relation(fields: [disasterId], references: [id], onDelete: Cascade)

  @@index([lastUpdated])
  @@map("disaster_metric")
}

model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String?  @db.Uuid
  action    String
  entity    String
  entityId  String
  timestamp DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([timestamp])
  @@index([entity])
  @@index([entity, entityId])
  @@map("audit_log")
}

enum MediaType {
  IMAGE
  VIDEO
}

enum NGORequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}
